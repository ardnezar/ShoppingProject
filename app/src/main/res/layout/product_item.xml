<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/product_name"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="30dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Product Name"
            android:textSize="@dimen/price_text_size"
            />
        <TextView
            android:id="@+id/product_short_desc"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Product Description"
            android:lines="2"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="left|right" />
        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="@dimen/price_text_size"
            android:text="$100"/>
        <TextView
            android:id="@+id/availability"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/availability_size"
            android:text="@string/in_stock_label"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="2.0" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/item_page_left_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text="(10)" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:text="Item Description:"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/long_description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/item_page_left_padding"
            android:layout_marginRight="@dimen/item_page_left_padding"
