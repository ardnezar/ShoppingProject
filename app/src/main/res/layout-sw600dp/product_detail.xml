<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/detail_page_tab_padding"
        android:paddingRight="@dimen/detail_page_tab_padding"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/product_name"
            android:layout_marginTop="@dimen/rating_count_item_margin"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/product_name_text_size"
            android:maxLines="4"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:focusable="false"/>

            <TextView
                android:id="@+id/rating_count"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/rating_count_item_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="left|right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/price_text_size"
                android:textColor="@color/price_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/inStock"
                android:layout_marginLeft="@dimen/item_page_tab_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/price_text_size"
                android:text="@string/in_stock_label"/>
        </LinearLayout>

        <TextView
            android:id="@+id/long_description_label"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            android:text="@string/item_desc_label"
            android:textSize="@dimen/list_item_header"
            android:textColor="@android:color/holo_blue_dark"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/long_description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="50" />
    </LinearLayout>

</ScrollView>