<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">
    <LinearLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/item_margin"
                android:text="@string/product_list_label"
                android:textSize="@dimen/availability_size"
                android:textColor="@android:color/holo_blue_dark" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:verticalSpacing="@dimen/grid_view_item_margin"
                android:horizontalSpacing="@dimen/grid_view_item_margin"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible">
        <ProgressBar
            android:layout_width="@dimen/listing_progress_bar"
            android:layout_height="@dimen/listing_progress_bar" />
    </LinearLayout>
</FrameLayout>